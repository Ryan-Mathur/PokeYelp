<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pokeyelp.grat.team.pokemonyelp.activity_detail.DetailActivity">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <ImageView
                android:id="@+id/detail_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </FrameLayout>


    </ScrollView>

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"/>

    <TextView
        android:id="@+id/detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"/>

    <TextView
        android:id="@+id/detail_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"/>

    <TextView
        android:id="@+id/detail_button_scan_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="invisible"
        android:text="Scan for Pokemon"/>

    <ImageView
        android:id="@+id/detail_pokemon_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/detail_button_catch_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="invisible"
        android:text="Catch Pokemon!"/>


</LinearLayout>
