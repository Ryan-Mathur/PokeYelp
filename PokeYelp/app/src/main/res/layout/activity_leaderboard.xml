<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pokeyelp.grat.team.pokemonyelp.activity_leaderboard.LeaderboardActivity">

    <include layout="@layout/toolbar_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pokemonleaderboard"
            />

        <Button
            android:id="@+id/show_leaderboard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/box_machine"
            android:padding="20dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="@string/show_leaderboards"/>

        <com.google.android.gms.common.SignInButton
            android:layout_gravity="bottom|center"
            android:id="@+id/sign_in_button"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_to_google"/>



    </FrameLayout>






</LinearLayout>
