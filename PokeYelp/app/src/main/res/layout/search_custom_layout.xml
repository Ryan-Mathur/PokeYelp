<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/root_view_for_search_list"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_imageview"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#932222"/>

    <TextView
        android:id="@+id/search_business_name"
        android:layout_below="@+id/search_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST" />

    <TextView
        android:id="@+id/search_address"
        android:layout_below="@+id/search_business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST" />

    <ImageView
        android:id="@+id/search_fivestars"
        android:layout_below="@id/search_address"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#2c5c6b"/>
    <TextView
        android:id="@+id/search_numbofratings"
        android:layout_below="@id/search_fivestars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST" />

   <ImageView
       android:id="@+id/search_yelplogo"
       android:layout_below="@id/search_numbofratings"
       android:layout_width="75dp"
       android:layout_height="75dp"
       android:background="#2b0a56"/>

</RelativeLayout>